
@{
    ViewBag.Title = "Login";
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Login</title>
    <meta name="robots" content="noindex, nofollow">
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="~/Content/img/favicon-KPP.ico" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/css/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/assets/css/quill.snow.css" rel="stylesheet">
    <link href="~/Content/assets/css/quill.bubble.css" rel="stylesheet">
    <link href="~/Content/assets/css/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/css/simple-datatables.css" rel="stylesheet">
    <link href="~/Content/assets/css/style.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <main>
        <div class="container">
            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-1">
                                        <h1 class="text-center fw-bold text-primary" style="margin-bottom: -10px" >CPMOK</h1>
                                        @*<p class="text-center" style="margin-bottom: -10px">Welcome to MOK Control Panel: Unleash the Power of Mobile App Management</p>*@
                                        <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                                        <p class="text-center small">Enter your NRP & password to login</p>
                                    </div>
                                    <form class="row g-3 needs-validation" novalidate>
                                        <div class="col-12">
                                            <label for="yourUsername" class="form-label">NRP</label>
                                            <div class="input-group has-validation">
                                                <input type="text" name="username" class="form-control" id="nrp" placeholder="masukan NRP" required>
                                                <div class="invalid-feedback">Please enter your nrp.</div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label for="yourPassword" class="form-label">Password</label> <input type="password" name="password" class="form-control" id="password" placeholder="masukan Password" required>
                                            <div class="invalid-feedback">Please enter your password!</div>
                                        </div>

                                        <div class="col-12"> <button class="btn btn-primary w-100" type="submit" id="buttonSubmit" onclick="handleSubmit(event)">Login</button></div>
                                        <div class="col-12">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/Account/Login.js"></script>
    <script src="~/Content/assets/js/apexcharts.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/js/chart.min.js"></script>
    <script src="~/Content/assets/js/echarts.min.js"></script>
    <script src="~/Content/assets/js/quill.min.js"></script>
    <script src="~/Content/assets/js/simple-datatables.js"></script>
    <script src="~/Content/assets/js/tinymce.min.js"></script>
    <script src="~/Content/assets/js/validate.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
</body>
</html>

